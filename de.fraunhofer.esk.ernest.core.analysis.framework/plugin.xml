<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="analysis" name="Analysis" schema="schema/analysis.exsd"/>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:ERNEST.ContextMenu?after=ERNEST.ContextMenu.GenerateSimulation">
         <dynamic
               class="de.fraunhofer.esk.ernest.core.analysis.framework.AnalysisMenu"
               id="ERNEST.ContextMenu.RunAnalysis">
         </dynamic>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="ERNEST.ContextMenu"
               label="ERNEST">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <or>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="di">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="uml">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="ernest">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="notation">
                           </test>
                        </or>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.fraunhofer.esk.ernest.core.analysis.framework.commands.category"
            name="ERNEST Category">
      </category>
      <command
            categoryId="de.fraunhofer.esk.ernest.core.analysis.framework.commands.category"
            id="de.fraunhofer.esk.ernest.core.analysis.framework.selectedanalyses"
            name="Preferred Analyses">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.fraunhofer.esk.ernest.core.analysis.framework.SelectedAnalysesHandler"
            commandId="de.fraunhofer.esk.ernest.core.analysis.framework.selectedanalyses">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.fraunhofer.esk.ernest.core.analysis.framework.nestedPage"
            class="de.fraunhofer.esk.ernest.core.analysis.framework.preferences.AnalysisPreferencePage"
            id="de.fraunhofer.esk.ernest.core.analysis.framework.preferences.AnalysisPreferencePage"
            name="Analysis">
      </page>
      <page
            class="de.fraunhofer.esk.ernest.core.analysis.framework.preferences.NestedPreferencePage"
            id="de.fraunhofer.esk.ernest.core.analysis.framework.nestedPage"
            name="ERNEST">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.fraunhofer.esk.ernest.core.analysis.framework.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
